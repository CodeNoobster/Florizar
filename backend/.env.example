# ============================================
# CONFIGURATION FLORIZAR - BACKEND
# ============================================

# Port du serveur
PORT=5000

# Environnement (development, production)
NODE_ENV=development

# ============================================
# SÉCURITÉ - JWT
# ============================================
# CRITIQUE: Changez cette valeur en production!
# Minimum 32 caractères requis
# Pour générer une clé sécurisée:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=votre_secret_jwt_de_minimum_32_caracteres_tres_securise_a_changer_absolument

# ============================================
# CORS - Origines autorisées
# ============================================
# URL du frontend en production (séparées par des virgules si plusieurs)
FRONTEND_URL=http://localhost

# ============================================
# BASE DE DONNÉES
# ============================================
# Chemin de la base de données SQLite
DATABASE_PATH=./database.sqlite

# ============================================
# UPLOADS
# ============================================
# Dossier pour les fichiers uploadés
UPLOADS_PATH=./uploads

# Taille maximale des fichiers (en MB)
MAX_FILE_SIZE=10

# ============================================
# SÉCURITÉ AVANCÉE
# ============================================
# Activer les logs de sécurité détaillés
SECURITY_LOGS=true

# Nombre maximum de tentatives de connexion (rate limiting)
MAX_LOGIN_ATTEMPTS=5

# Durée de blocage après tentatives échouées (en minutes)
LOGIN_LOCKOUT_DURATION=15
